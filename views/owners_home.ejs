<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Owner Login / Signup</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen flex flex-col items-center justify-center px-4">
  <div class="w-full max-w-4xl grid grid-cols-1 md:grid-cols-2 gap-8">

    <!-- Login Form -->
    <form action="/owners/login" method="POST" class="bg-white p-8 rounded shadow-md">
      <h2 class="text-xl font-bold mb-4 text-center">Owner Login</h2>

      <% if (error && error.length > 0) { %>
        <div class="bg-red-100 text-red-800 p-2 rounded mb-4"><%= error %></div>
      <% } %>

      <label class="block mb-2">Email</label>
      <input type="email" name="email" required class="w-full px-3 py-2 border rounded mb-4" />

      <label class="block mb-2">Password</label>
      <input type="password" name="password" required class="w-full px-3 py-2 border rounded mb-6" />

      <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">Login</button>
    </form>

    <!-- Signup Form -->
    <form action="/owners/create" method="POST" enctype="multipart/form-data" class="bg-white p-8 rounded shadow-md">
      <h2 class="text-xl font-bold mb-4 text-center">Create Owner Account</h2>

      <% if (success && success.length > 0) { %>
        <div class="bg-green-100 text-green-800 p-2 rounded mb-4"><%= success %></div>
      <% } %>

      <label class="block mb-2">Full Name</label>
      <input type="text" name="fullname" required class="w-full px-3 py-2 border rounded mb-4" />

      <label class="block mb-2">Email</label>
      <input type="email" name="email" required class="w-full px-3 py-2 border rounded mb-4" />

      <label class="block mb-2">Password</label>
      <input type="password" name="password" required class="w-full px-3 py-2 border rounded mb-4" />

      <label class="block mb-2">Profile Picture</label>
      <input type="file" name="picture" accept="image/*" class="w-full px-3 py-2 border rounded mb-6" />

      <button type="submit" class="w-full bg-green-600 text-white py-2 rounded hover:bg-green-700">Sign Up</button>
    </form>
  </div>
</body>
</html>
