

<header class="bg-green-700 text-white py-4 shadow-md sticky top-0 z-50">
  <div class="max-w-7xl mx-auto flex justify-between items-center px-6">
    <div class="text-2xl font-bold cursor-default select-none">Ecomm</div>
    <nav class="space-x-6 text-lg">
      <a href="/" class="hover:underline">Control Shop</a>
      <a href="/owners/logout" class="hover:underline">Sign Out</a>
    </nav>
  </div>
</header>

<div class=" relative max-h-[90vh] overflow-y-auto
 max-w-lg mx-auto p-8 bg-white rounded-lg shadow-lg mt-20 bottom-20 mb-20">
  <h2 class="text-3xl font-extrabold mb-8 text-center text-green-700">Create New Product</h2>

  <% if (error && error.length > 0) { %>
    <div class="bg-red-100 text-red-700 p-4 rounded mb-6 border border-red-300 font-semibold">
      <%= error %>
    </div>
  <% } %>

  <form action="/owners/admin/products/create" method="POST" enctype="multipart/form-data" class="flex flex-col gap-6" id="createProductForm">
    <label for="name" class="font-semibold text-gray-700">Name</label>
    <input id="name" type="text" name="name" required
      class="border border-gray-300 p-3 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 transition" 
      placeholder="Enter product name" />

    <label for="price" class="font-semibold text-gray-700">Price</label>
    <input id="price" type="number" name="price" required min="0"
      class="border border-gray-300 p-3 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 transition"
      placeholder="Enter price in â‚¹" />

    <label for="discount" class="font-semibold text-gray-700">Discount (%)</label>
    <input id="discount" type="number" name="discount" min="0" max="100" value="0"
      class="border border-gray-300 p-3 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 transition"
      placeholder="Discount percentage (optional)" />

    <label for="bgcolor" class="font-semibold text-gray-700">Background Color</label>
    <input id="bgcolor" type="text" name="bgcolor" placeholder="#ff0000"
      class="border border-gray-300 p-3 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 transition" />

    <label for="panel" class="font-semibold text-gray-700">Panel Color</label>
    <input id="panel" type="text" name="panel" placeholder="#00ff00"
      class="border border-gray-300 p-3 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 transition" />

    <label for="textcolor" class="font-semibold text-gray-700">Text Color</label>
    <input id="textcolor" type="text" name="textcolor" placeholder="#000000"
      class="border border-gray-300 p-3 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 transition" />

    <label for="image" class="font-semibold text-gray-700">Product Image</label>
    <input id="image" type="file" name="image" accept="image/*"
      class="border border-gray-300 p-2 rounded-md cursor-pointer focus:outline-none focus:ring-2 focus:ring-green-500 transition" />

    <button type="submit" class="bg-green-600 text-white py-3 rounded-md hover:bg-green-700 transition font-semibold shadow-md">
      Create Product
    </button>
  </form>
</div>

<%- include('./partials/header') %>
<%- include('./partials/footer') %>
